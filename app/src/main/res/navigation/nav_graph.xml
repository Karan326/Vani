<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/videoListFragment">

    <fragment
        android:id="@+id/videoListFragment"
        android:name="com.example.vani.VideoListFragment"
        android:label="VideoListFragment" >
        <action
            android:id="@+id/action_videoListFragment_to_playerFragment"
            app:destination="@id/playerFragment" />

        <argument
            android:name="uri"
            app:argType="string"
            android:defaultValue="null"/>
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.vani.PlayerFragment"
        android:label="PlayerFragment" />
</navigation>